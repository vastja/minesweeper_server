{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build minsweeper server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "Server.out", "Game.cpp", "Server.cpp", "Utils.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "taskName": "debug build minsweeper server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-o", "Server.out", "Game.cpp", "Server.cpp", "Utils.cpp"
            ]
        }
    ]
}